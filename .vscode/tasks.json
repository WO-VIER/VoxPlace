{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build: native",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/build_native.sh",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "build: wasm",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/build_wasm.sh",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "serve: wasm",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/serve_wasm.sh",
            "isBackground": true,
            "dependsOn": "build: wasm",
            "problemMatcher": {
                "owner": "custom",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "Serving HTTP on .*$"
                },
                "background": {
                    "activeOnStart": false,
                    "beginsPattern": "Serving HTTP on .*$",
                    "endsPattern": "$^"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/clean_all.sh",
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ générer le fichier actif",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tâche générée par le débogueur."
        }
    ]
}